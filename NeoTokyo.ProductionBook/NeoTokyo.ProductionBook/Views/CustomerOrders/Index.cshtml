@model IEnumerable<NeoTokyo.ProductionBook.Models.CustomerOrder>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index", "CustomerOrders", FormMethod.Get))
{
    <p>
        <table>
            <tr>
                <th>
                    Customer:
                </th>
                <th>
                </th>
            </tr>
            <tr>
                <td>
                    @Html.DropDownList("customer", new SelectList(ViewBag.Customers))
                </td>
                <td>
                    <input type="submit" value="Search" class="btn btn-default" />
                </td>
            </tr>
        </table>
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerOrderStatus.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerPONumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comments)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerOrderStatus.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerPONumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comments)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
